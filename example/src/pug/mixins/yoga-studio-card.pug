mixin yogaStudioCard
    .yoga-studio-card
        .yoga-studio-card__wrap
            .yoga-studio-card__image-wrap
                img.yoga-studio-card__image(src=require("../../img/yoga-studio-card__images.png") width="169" height="169")
            .yoga-studio-card__description
                .yoga-studio-card__title Центр йоги Махарадж
                ul.yoga-studio-card__list
                    li.yoga-studio-card__country Россия
                    li.yoga-studio-card__city Москва
                    li.yoga-studio-card__email email@domain.ru
                    li.yoga-studio-card__site www.domain.ru
                .social
                    a.social__link(href="#")
                        img.social__image(src=require("../../img/social__instagram.png"))
                    a.social__link(href="#")
                        img.social__image(src=require("../../img/social__vk.png"))
                    a.social__link(href="#")
                        img.social__image(src=require("../../img/social__youtube.png"))
                    a.social__link(href="#")
                        img.social__image(src=require("../../img/social__odnoklassniki.png"))
                    a.social__link(href="#")
                        img.social__image(src=require("../../img/social__facebook.png"))
                a.yoga-studio-card__link(href="#") О студии
